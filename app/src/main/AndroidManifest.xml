<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.www.weijingtong">

    <!-- 联网权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 网络状态权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.app.www.weijingtong.model.BaseApplication">
        <activity
            android:name="com.app.www.weijingtong.activity.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.app.www.weijingtong.activity.AboutActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask" />
        <activity
            android:name="com.app.www.weijingtong.activity.AdvantageActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"/>
        <activity
            android:name="com.app.www.weijingtong.activity.BusinessActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"/>
        <activity
            android:name="com.app.www.weijingtong.activity.CooperationActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"/>
        <activity
            android:name="com.app.www.weijingtong.activity.ExperienceActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"/>
        <activity
            android:name="com.app.www.weijingtong.activity.SolutionActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"/>
        <activity
            android:name="com.app.www.weijingtong.activity.NavArticleActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.app.www.weijingtong.activity.ExperienceActivity"/>
        <activity
            android:name="com.app.www.weijingtong.activity.ArticleActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.app.www.weijingtong.activity.HomeActivity"/>
    </application>

</manifest>